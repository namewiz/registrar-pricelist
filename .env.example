############################################
# registrar-pricelist — .env example
# Copy to .env and adjust values
############################################

# --- Openprovider ---
# Optional: override source sheet URL and output path
OPENPROVIDER_SHEET_URL="https://docs.google.com/spreadsheets/d/<id>/edit?gid=<gid>#gid=<gid>"
OPENPROVIDER_OUT_PATH="data/openprovider-prices.json"

# --- Namecheap ---
# Required for gen-namecheap-prices.js
NAMECHEAP_API_USER=""
NAMECHEAP_API_KEY=""
NAMECHEAP_USERNAME=""
NAMECHEAP_CLIENT_IP=""

# Optional Namecheap settings
NAMECHEAP_SANDBOX="0"                   # set to 1 to use sandbox
NAMECHEAP_TLD_CACHE=".cache/namecheap-tlds.json"
NAMECHEAP_TLD_CACHE_TTL_MINUTES="1440"
NAMECHEAP_OUT_PATH="data/namecheap-prices.json"

# --- NIRA ---
# Optional: override output and exchange rates path used by NIRA
NIRA_OUT_PATH="data/nira-prices.json"

# --- Exchange Rates ---
# Optional: override sources for the exchange rates generator
# Countries + currency metadata (2-letter country code and currencies only)
COUNTRY_API_URL="https://restcountries.com/v3.1/all?fields=cca2,currencies"
# USD‑based FX rates feed (FloatRates JSON)
EXCHANGE_RATES_URL="https://www.floatrates.com/daily/usd.json"
# Where NIRA (and others) should read the generated exchange rates JSON from
EXCHANGE_RATES_PATH="data/exchange-rates.json"

# --- Generic (optional fallbacks) ---
# OUT_PATH overrides output for scripts that support it if tool-specific
# variables are not set;
OUT_PATH=""
VERBOSE="0"
