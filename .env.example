# --- Openprovider ---
# Optional: override source sheet URL and output path
OPENPROVIDER_SHEET_URL="https://docs.google.com/spreadsheets/d/<id>/edit?gid=<gid>#gid=<gid>"
OPENPROVIDER_OUT_PATH="data/openprovider-prices.json"

# --- Namecheap ---
# Required for gen-namecheap-prices.js
NAMECHEAP_API_USER=""
NAMECHEAP_API_KEY=""
NAMECHEAP_USERNAME=""
NAMECHEAP_CLIENT_IP=""

# Optional Namecheap settings
NAMECHEAP_SANDBOX="0"                   # set to 1 to use sandbox
NAMECHEAP_TLD_CACHE=".cache/namecheap-tlds.json"
NAMECHEAP_TLD_CACHE_TTL_MINUTES="1440"
NAMECHEAP_OUT_PATH="data/namecheap-prices.json"

# --- NIRA ---
# Optional: override output and FX feed URL
NIRA_OUT_PATH="data/nira-prices.json"
NIRA_FX_URL="https://www.floatrates.com/daily/usd.json"

# --- Generic (optional fallbacks) ---
# OUT_PATH overrides output for scripts that support it if tool-specific
# variables are not set;
OUT_PATH=""
VERBOSE="0"

